<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/email_head_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/email_head_status_icon"
        android:text="senderFrom"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/email_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_head_sender"
        android:layout_below="@+id/email_head_sender"
        android:text="Title content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/email_head_received_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/email_head_title"
        android:layout_marginEnd="29dp"
        android:text="2018-05-11 15:20:33"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/email_head_status_icon"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:src="@drawable/unread"
        />
</RelativeLayout>
